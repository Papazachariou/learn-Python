f1 = '{}, {}, {}'.format('a', 'b', 'c')
print(f1)
f1 = '{0}, {1}, {2}'.format('a', 'b', 'c')
print(f1)
f1 = 'Cylinder: {height}, {radius}'.format(radius='3', height='5')
print(f1)

f1 = '{0:02d}/{1:02d}/{2:02d}'.format(12, 7, 69)
print(f1)

f1 = 'Total with tax: {0:10.2f} Euro'.format(1000 * 1.23)
print(f1)

f1 = '{1:02d} {month}, {0:02d}'.format(12,1969, month='July')
print(f1)

f1 = 'dec: {0}, oct: {0:#o}, hex: {0:#X}, bin: {0:b}'.format(44)
print(f1)

f1 = '{0} {1} or not {0} {1}'.format('to', 'be')
print(f1)

f1 = '{0:<20s} {1:7.2f}'.format('Total:', 1230)
print(f1)
f1 = '{0:>20s} {1:7.2f}'.format('Total:', 1230)
print(f1)
f1 = '{0:^20s} {1:7.2f}'.format('Total:', 1230)
print(f1)

f1 = 'The set is {{{}, {}}}.'.format(3, 5)
print(f1)


