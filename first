PI = 3.141592653589793

print('%f' % PI)
print('%10.3f' % PI)
print('%10f' % PI)
print('%.2f' % PI)

print('%d' % 99)
print('%4d' % 99)
print('%-4d' % 99)
print('%04d' % 99)

