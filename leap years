# leap years

import datetime
now = datetime.datetime.now()
nowYear = now.year                      # current year

for year in range(1900, nowYear):
    if year % 4 == 0:
        if (year % 100) == 0:
            if (year % 400) == 0:
                print(year, 'is a leap year!')
            else:
                pass
        else:
            print(year, 'is a leap year!')
    else:
        pass
