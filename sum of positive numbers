# sum of positive numbers

import math

total = 0

count = 0

while True:
    num = float(input('Enter a positive number: '))
    if num == 0:
        break
    elif num < 0:
        print('Enter only positive numbers')
        break
    else:
        count += 1
        terms = math.sqrt(((num ** 2) + count) / count)
        total = total + terms
        print(total)
